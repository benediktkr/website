h1,h2 {
    margin-left: 5px;
    font-family: sans-serif; 
    font-variant: small-caps;
    display: inline;
    color: #000000;
    font-size: 14px;
    display: inline;
}

h2 {
    font-size: 14px;
    font-weight: normal; 
 /* text-transform: uppercase; */
    letter-spacing: 2px;
}

h1 {
    font-weight: lighter;
    font-size: 22px;
    letter-spacing: 4px;
}
body {
    font-family: sans-serif;
    font-weight: normal;
    font-size: 12px;
    max-width: 400px;
    margin: 75px auto;
    background-color: #ffffff;
}

#title {
    text-align:center;
}

#content {
	margin: 0px auto;
	padding: 15px;	
 /*	border:1px dashed #333;  */
    border:1px none #333; 
}

p {
    margin-left: 13px;
    margin-right: 7px;
}

ul {
    padding-left: 2em;
    list-style: none;
    text-indent: -1em;
}

ul li:before {
	content: "\00BB \0020"
}

img {
    border: 0px;
}   

a {
    text-decoration: underline;
}
